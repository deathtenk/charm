<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Linkedin url</th>
      <th>Facebook url</th>
      <th>Twitter url</th>
      <th>Github url</th>
      <th>Bitbucket url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.title %></td>
        <td><%= profile.description %></td>
        <td><%= profile.linkedin_url %></td>
        <td><%= profile.facebook_url %></td>
        <td><%= profile.twitter_url %></td>
        <td><%= profile.github_url %></td>
        <td><%= profile.bitbucket_url %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
